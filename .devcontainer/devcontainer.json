{
    "name": "Go Development Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go"
            ]
        }
    },
    // "remoteUser": "root",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "go version"
}